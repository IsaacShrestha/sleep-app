<div class="clear"></div>
{{#if activeBedTime}}
<div class="row">

	<center>
		<h3>You need to sleep by</h3>
	</center>
</div>
<div class="row">
		<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
		<div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
			<h4 class="hrs">{{calculateBedTime}}</h4>
	
		</div>
		<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
		
	</div>

{{else}}

	<div class="row">

	<center>
		<h3>You need to sleep for</h3>
	</center>
</div>
<div class="row">
		<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">&nbsp;</div>
		<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
			<p class="clockface">{{hourtoSleep}}</p>
			
		</div>
		
		<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"><span class="clockface"> : </span></div>
		
		<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
			<p class="clockface">{{minutestoSleep}}</p>
		</div>
		<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">&nbsp;</div>
		<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"><p class="hrs">Hrs</p></div>
		
	</div>

{{/if}}



<div class="clean"></div>
<div class="row">
			<div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
				<label class="bedtimelabel">Enter wakeup time</label>
			</div>
			<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
				{{input class="form-control" type="text" value=hours placeholder=" "}}
				
			</div>

			<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"> <span style="font-size: 20px; font-weight: bold;">:</span> </div>
			<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
				{{input class="form-control" type="text" value=mins placeholder=" "}}
				
			</div>
			<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"> <span style="font-size: 16px;">AM</span> </div>
			<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"> </div>
</div>
<div class="row clean"></div>

	<div class="row">
			<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3"></div>
			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
				<button class="btn btn-danger btn-block" {{action 'showBedTime'}} >Calculate my bedtime</button>
			</div>
			<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3"></div>
		
	</div>
